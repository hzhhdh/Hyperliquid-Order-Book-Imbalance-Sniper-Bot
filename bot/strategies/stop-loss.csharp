public class StopLossManager {
    private decimal _entryPrice;
    private decimal _trailPercentage;

    public void Activate(decimal entry, decimal trailPct) {
        _entryPrice = entry;
        _trailPercentage = trailPct;
    }

    public bool ShouldExit(decimal currentPrice) {
        return currentPrice < _entryPrice * (1 - _trailPercentage);
    }
}
